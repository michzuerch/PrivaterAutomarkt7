---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

const base = SITE.basePathname;
console.log('Base:', base);

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};

const images = [
	{ id: '1', src: '/Gallery/1.jpg' },
	{ id: '2', src: '/Gallery/2.jpg' },
];
---

<Layout {meta}>
	<div class="carousel w-64 mx-auto">
		{
			images.map((image) => (
				<div id={'item' + image.id} class="carousel-item w-full">
					<img src={SITE.basePathname + image.src} class="w-full" />
					{console.log('Add image:', image.src)}
				</div>
			))
		}

		<div class="flex justify-center w-full py-2 gap-2">
			{
				images.map((image) => (
					<a href={'item' + image.id} class="btn btn-xs">
						{image.id}
						{console.log('Add button', image.id)}
					</a>
				))
			}
		</div>
	</div>
</Layout>
