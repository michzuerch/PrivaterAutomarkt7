---
import { Icon } from 'astro-icon';
---

<footer class="text-center lg:text-left bg-gray-100 text-gray-600">
	<div class="mx-6 py-10 text-left">
		<div class="grid grid-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
			<div class="pl-8">
				<h6 class="font-semibold mb-4 flex justify-center md:justify-start">Öffnungszeiten</h6>

				<table class="table-auto">
					<tr>
						<td>Montag - Freitag</td>
						<td class="text-right"><span class="ml-6">9:00 bis 18:00</span></td>
					</tr>
					<tr>
						<td>Samstag</td>
						<td class="text-right"><span class="ml-6">9:00 bis 14:00</span></td>
					</tr>
				</table>
			</div>
			<div class="">
				<h6 class="font-semibold mb-4 flex justify-center md:justify-start">Kontakt</h6>
				<p class="flex items-center justify-center md:justify-start mb-4">
					<Icon class="w-6 mr-6" name="mdi:address-marker-outline" />
						Privater Automarkt<br>
						Herrenlandstrasse 39<br>
						78315 Radolfzell<br>
				</p>
				<p class="flex items-center justify-center md:justify-start mb-4">
					<Icon class="w-6 mr-6" name="ic:outline-email" />
					info@billig-car.de
				</p>
				<p class="flex items-center justify-center md:justify-start mb-4">
					<Icon class="w-6 mr-6" name="bi:telephone" />
					+49 - (0)7732-942407
				</p>
				<p class="flex items-center justify-center md:justify-start">
					<Icon class="w-6 mr-6" name="ic:outline-fax" />
					+49 - (0)7732-942408
				</p>
			</div>
		</div>
	</div>
	<div class="text-center p-6 bg-gray-200">
		<span>© 2021 Copyright:</span>
		<a class="text-gray-600 font-semibold" href="https://github.com/michzuerch/PrivaterAutomarkt7"
			>michzuerch@gmail.com</a
		>
	</div>
</footer>
